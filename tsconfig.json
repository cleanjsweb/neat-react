{
	"compilerOptions": {
	  "baseUrl": ".",
	  "outDir": "build",
	  "paths": {
		"@/*": [
		  "./*"
		]
	  },
	  "target": "es5",
	  "lib": [
		"dom",
		"dom.iterable",
		"esnext"
	  ],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": false,
	  "forceConsistentCasingInFileNames": true,
	  "noEmit": false,
	  "incremental": false,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve",
	  "strictNullChecks": true
	},
	"include": [
	  "next-env.d.ts",
	  "**/*.ts",
	  "**/*.tsx"
	],
	"exclude": [
	  "node_modules/**/**.*",
	  "build/**/**.*",
	  "mirror-pkg/**/**.*"
	]
}
